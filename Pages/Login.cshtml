@page
@model TableServiceApi.Pages.LoginModel
@{
    Layout = "Shared/_LayoutLogin";
}
    <div class="container">
        <div class="card align-middle" style="margin-top: 300px">
            <form class="card-body rebase-control rebase-login-form">
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control rebase-login-email" placeholder="Enter email" id="email">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control rebase-login-password" placeholder="Enter password" id="password">
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox"> Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-primary rebase-login-btn" data-rebase-login="login">Submit</button>
            </form>
        </div>
    </div>
